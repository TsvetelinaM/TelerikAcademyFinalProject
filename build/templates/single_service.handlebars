<div class="container-fluid tm-main-header">
<p class="tm-main-header-content">{{this.currentService.[0].title}}</p>
</div>
<div class="container-fluid tm-main tm-main-single-service">
    <div class="tm-gradient-grey-color tm-main-path-name"><span class="tm-grey">Home <span class="tm-strange-symbol"></span> Articles <span class="tm-strange-symbol"></span> </span> {{this.currentService.[0].title}}</div>
    <div class="tm-aside-container">
            <aside class="tm-aside ml-auto">
                <h5 class="tm-aside-heading">Recent Posts</h5>
                <div class="tm-aside-body tm-aside-body-post">
                    <p><a href="#/articles/{{this.allArticles.[0].linkName}}">{{this.allArticles.[0].content}}</a></p>
                </div>
            </aside>
            <aside class="tm-aside">
                <h5 class="tm-aside-heading">Recent Posts</h5>
                <div class="tm-aside-body tm-aside-body-links ">
                    <ul>
                    {{#each this.allArticles}}
                    <li><a href="#/articles/{{this.linkName}}">{{this.title}}</a></li>
                    {{/each}}
                    </ul>
                </div>
            </aside>
        </div>

        <div class="container tm-gradient-white-color tm-current-service-container">
                <div class="tm-article-main col-xs-12 col-md-8">
                    <div class="container tm-hbox tm-article-main-part-container">
                        <div class="col-md-4 tm-img-container tm-article-img tm-service-img">
                            {{#if this.currentService.[0].imgUrl}}
                            <img src={{this.currentService.[0].imgUrl}} alt="" class="tm-img">
                            {{else}}
                            <div class="tm-no-image"></div>
                            {{/if}}
                        </div>
                        <div class="container tm-article-content-container tm-service-content-container col-md-8">
                            <ul>
                            {{#each this.currentService.[0].content}}
                            <li>{{this}}</li>
                            {{/each}}
                            </ul>
                        </div>
                    </div>
                </div>
        </div>
</div>