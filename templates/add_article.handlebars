<div class="container-fluid tm-main-header">
<p class="tm-main-header-content">Add Article</p>
</div>
<div class="container-fluid tm-main">
    <div class="tm-main-path-name tm-current-article-title"><span class="tm-grey">Home <span class="tm-strange-symbol"></span> Articles <span class="tm-strange-symbol"></span> </span> Add</div>
    <div class="tm-add-article-control">
        <form class="form-horizontal tm-form" method="post">

            <div class="form-group">
                <label class="col-xs-6 col-md-3 control-label tm-align-right" for="tm-textinput-title">Article title:</label>  
                <div class="col-xs-12 col-md-8">
                    <input id="tm-textinput-title" name="tm-textinput-title" type="text" placeholder="Please enter the article title" class="tm-textinput-title form-control input-md" required="">
                </div>
            </div>

            <div class="form-group">
                <label for="sel1" class="col-xs-6 col-md-3 control-label">Article category:</label>
                <div class="col-xs-12 col-md-8">
                <select class="form-control input-md tm-article-category" placeholder="Please choose" id="sel1">
                    <option>Accounting</option>
                    <option>Taxes</option>
                    <option>Salaries</option>
                    <option>Other</option>
                </select>
                </div>
            </div>

            <div class="form-group">
                <label class="col-xs-6 col-md-3 control-label" for="tm-textinput-content">Article content:</label>  
                <div class="col-xs-12 col-md-8">
                    <textarea rows="5" id="tm-textinput-content" name="tm-textinput-content" type="text" placeholder="Please enter the article content" class="tm-textinput-content form-control input-md" required=""></textarea>
                </div>
            </div>

            <!-- Button -->
            <div class="form-group">
                <label class="col-xs-12 col-md-3 control-label" for="tm-add"></label>
                <div class="col-xs-6 col-md-6">
                    <button id="tm-add" name="tm-add" class="btn btn-primary tm-add-article-button">Add</button>
                </div>
            </div>

            </form>

    </div>
</div>