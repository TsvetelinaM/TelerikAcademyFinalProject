<div class="container-fluid tm-main-header">
<p class="tm-main-header-content">Articles</p>
</div>
<div class="container-fluid tm-main tm-main-articles">
    <div class="tm-main-path-name tm-articles-path-name"><span class="tm-grey">Home <span class="tm-strange-symbol"></span></span> Articles</div>
    <div class="tm-aside-container">
            <aside class="tm-aside ml-auto">
                <h5 class="tm-aside-heading">Recent Posts</h5>
                <div class="tm-aside-body tm-aside-body-post">
                    <p><a href="#/articles/{{this.allArticles.[0].linkName}}">{{this.allArticles.[0].content}}</a></p>
                </div>
            </aside>
            <aside class="tm-aside">
                <h5 class="tm-aside-heading">Recent Posts</h5>
                <div class="tm-aside-body tm-aside-body-links ">
                    <ul>
                    {{#each this.allArticles}}
                    <li><a href="#/articles/{{this.linkName}}">{{this.title}}</a></li>
                    {{/each}}
                    </ul>
                </div>
            </aside>
        </div>
        <div class="container tm-gradient-grey-color-left tm-current-articles-container">
            {{#each this.articlesItems}}
                <div class="tm-article-main col-xs-12 col-md-12">
                    <div class="tm-gradient-grey-color tm-article-title tm-Colaborate-30px"><p>{{this.title}}</p></div>
                    <div class="tm-gradient-white-color tm-article-posted-by">Posted by {{this.author}} on {{this.date}} in {{this.category}} | {{this.commentsCounter}} Comments</div>
                    <div class="container tm-hbox tm-article-main-part-container">
                        <div class="col-md-4 tm-img-container tm-article-img">
                            {{#if this.imgUrl}}
                            <img src={{this.imgUrl}} alt="" class="tm-img">
                            {{else}}
                            <div class="tm-no-image"></div>
                            {{/if}}
                        </div>
                        <div class="container tm-article-content-container col-md-8">
                            {{this.content}}
                        </div>
                    </div>
                    <div class="tm-article-btn tm-active-page">
                        <a href="#/articles/{{this.linkName}}">Read More</a>
                    </div>
                </div>
            {{/each}}
        </div>
        <div class="container tm-gradient-white-color-left tm-pagination-container">
            <div class="col-xs-12 col-md-12">
                <ul class="pagination">
                    <span class="tm-page-counter">Page <span class="tm-active-page-info">{{this.activePage}}</span> of {{this.pageCount}}</span>
                    <li><button class = "tm-pagination-btn tm-active-page">1</button></li>
                    {{#each this.pageIndex}}
                    <li><button class="tm-pagination-btn">{{this}}</button></li>
                    {{/each}}
                </ul>
            </div>
        </div>

</div>